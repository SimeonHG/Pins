<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/helloText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/welcome"
        app:layout_constraintTop_toTopOf="parent"

        tools:layout_editor_absoluteX="159dp" />

    <Button
        android:id="@+id/homeProfileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/profile"
        app:layout_constraintBottom_toTopOf="@+id/editProfileBtn"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/findFriendsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/find_friends"
        app:layout_constraintBottom_toTopOf="@+id/homeProfileBtn"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/homePageLogoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/logout"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/editProfileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/homePageLogoutBtn"
        android:layout_marginBottom="16dp"
        android:text="@string/edit_profile"
        app:layout_constraintBottom_toTopOf="@+id/settingsBtn"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/checkMapBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editProfileBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/check_the_map"
        app:layout_constraintBottom_toTopOf="@+id/eventsBtn"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/eventsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/events"
        app:layout_constraintBottom_toTopOf="@+id/findFriendsBtn"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/settings"
        app:layout_constraintBottom_toTopOf="@+id/homePageLogoutBtn"
        tools:layout_editor_absoluteX="160dp" />

    <Button
        android:id="@+id/checkHeatmapBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/heatmap"
        app:layout_constraintBottom_toTopOf="@+id/checkMapBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>